# AI Mafia Environment Configuration - Development

# ================================
# API Keys (Required)
# ================================

# OpenAI API Key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key for Claude models  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key for Gemini models
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ================================
# Server Configuration
# ================================

# Server port (default: 3001)
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ================================
# Authentication & Security
# ================================

# Creator bypass password for unlimited access
CREATOR_BYPASS_PASSWORD=detective_ai_mafia_2025

# ================================
# Game Configuration
# ================================

# Default game settings
DEFAULT_GAME_DURATION=300
DEFAULT_NIGHT_DURATION=90
DEFAULT_VOTING_DURATION=120

# AI cost limits (in USD)
MAX_COST_PER_GAME=0.10
DAILY_AI_BUDGET=50.00

# ================================
# Development Settings
# ================================

# Enable debug mode
DEBUG=mafia:*

# Enable detailed analytics
ENABLE_ANALYTICS=true

# Enable AI behavior logging
ENABLE_AI_LOGGING=true

# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=true

# Disable rate limiting in development
DISABLE_RATE_LIMITING=true

