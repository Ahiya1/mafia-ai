{
  "name": "mafia-ai",
  "version": "1.0.0",
  "description": "AI Mafia - A groundbreaking social deduction game with AI personalities",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:server\"",
    "dev:next": "next dev --turbo",
    "dev:server": "tsx watch server/index.ts",
    "server:dev": "tsx watch server/index.ts",
    "build": "next build && npm run build:server",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "next start",
    "start:server": "node dist/server/index.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test:server": "chmod +x test-server.sh && ./test-server.sh",
    "setup": "npm install && npm run type-check"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "@tailwindcss/vite": "^4.1.10",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "next": "^15.3.0",
    "openai": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.19.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.3.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
