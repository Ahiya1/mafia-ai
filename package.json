{
  "name": "mafia-ai",
  "version": "1.0.0",
  "description": "AI Mafia - A groundbreaking social deduction game with AI personalities",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server:dev": "tsx watch server/index.ts",
    "server:build": "tsc server/index.ts --outDir dist",
    "server:start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "type-check": "tsc --noEmit",
    "install:deps": "chmod +x install-dependencies.sh && ./install-dependencies.sh",
    "setup": "npm run install:deps && npm run db:generate"
  },
  "dependencies": {
    "next": "^15.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@prisma/client": "^6.10.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "openai": "^5.6.0",
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "tailwindcss": "^4.1.10",
    "@tailwindcss/vite": "^4.1.10"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.0",
    "prisma": "^6.10.1",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
