{
  "name": "mafia-ai",
  "version": "2.0.0",
  "description": "AI Mafia - A groundbreaking social deduction game with Revolutionary Architecture",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:server\"",
    "dev:next": "next dev",
    "dev:server": "tsx watch server/index.ts",
    "server:dev": "tsx watch server/index.ts",
    "build": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "node dist/server/index.js",
    "start:server": "node dist/server/index.js",
    "start:next": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test:server": "chmod +x test-server.sh && ./test-server.sh",
    "setup": "chmod +x start-dev.sh && ./start-dev.sh",
    "deploy": "npm run build && npm run build:server",
    "postbuild": "echo 'Build completed successfully'",
    "railway:build": "npm run build",
    "railway:start": "npm start",
    "__comment": "ðŸ”¥ COMMIT 4: Revolutionary Architecture Database Scripts",
    "db:migrate": "tsx scripts/migrate-database.ts",
    "db:migrate:check": "tsx scripts/migrate-database.ts --check-only",
    "db:migrate:force": "tsx scripts/migrate-database.ts --force",
    "db:setup": "tsx scripts/migrate-database.ts --setup-admin",
    "db:health": "tsx scripts/migrate-database.ts --check-only",
    "db:stats": "tsx scripts/migrate-database.ts --check-only --verbose",
    "__comment2": "Development and Testing",
    "dev:full": "concurrently \"npm run dev:next\" \"npm run dev:server\"",
    "test:db": "tsx scripts/migrate-database.ts --check-only",
    "test:architecture": "echo 'Testing Revolutionary Architecture...' && npm run test:db",
    "__comment3": "Production Scripts",
    "postinstall": "npm run db:migrate",
    "vercel:deploy": "npm run db:migrate && npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^6.10.1",
    "@supabase/supabase-js": "^2.39.7",
    "@tailwindcss/vite": "^4.1.10",
    "bcryptjs": "^2.4.3",
    "beasties": "^0.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.3.0",
    "openai": "^5.6.0",
    "pg": "^8.16.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.10.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.19.0",
    "uuid": "^10.0.0",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.3.0",
    "prisma": "^6.10.1",
    "typescript": "^5.6.0"
  }
}
